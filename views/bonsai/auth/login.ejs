<div ng-controller="LoginCtrl as $ctrl" layout="row" layout-align="center center" flex>
  <md-card class="login-card" flex>
    <header>
      <h1>Bonsai</h1>
    </header>
    <md-card-content>
      <form ng-submit="$ctrl.login">
        <md-input-container class="md-block">
          <label>Email</label>
          <input ng-model="$ctrl.email" name="email" type="email">
        </md-input-container>
        <md-input-container class="md-block">
          <label>Password</label>
          <input ng-model="$ctrl.password" name="password" type="password">
        </md-input-container>
      </form>
    </md-card-content>
    <md-card-actions layout="row" layout-align="center center">
      <md-button class="md-primary" aria-label="Login">
        Login
      </md-button>
    </md-card-actions>
  </md-card>
</div>
